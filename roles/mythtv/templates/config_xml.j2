<Configuration>
  <Database>
    <PingHost>1</PingHost>
    <Host>{{ hearthminion_mythtv_db_server }}</Host>
    <UserName>{{ hearthminion_mythtv_db_user }}</UserName>
    <Password>{{ hearthminion_mythtv_db_password }}</Password>
    <DatabaseName>{{ hearthminion_mythtv_db_name }}</DatabaseName>
    <Port>3306</Port>
  </Database>
  <WakeOnLAN>
    <Enabled>0</Enabled>
    <SQLReconnectWaitTime>0</SQLReconnectWaitTime>
    <SQLConnectRetry>5</SQLConnectRetry>
    <Command>echo 'WOLsqlServerCommand not set'</Command>
  </WakeOnLAN>
