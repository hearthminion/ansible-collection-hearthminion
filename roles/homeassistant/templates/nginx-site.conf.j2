# Ansible managed

server {
  listen 80 {% if homeassistant_nginx_default_server %}default_server{% endif %};
  listen [::]:80 {% if homeassistant_nginx_default_server %}default_server{% endif %};
  server_name {{ item.name }}.{{ ansible_domain }}
  rewrite ^ https://{{ item.name }}.{{ ansible_domain }} permanent;
}

server {
  listen 443 ssl {% if homeassistant_nginx_default_server %}default_server{% endif %};
  listen [::]:443 ssl {% if homeassistant_nginx_default_server %}default_server{% endif %};

  include snippets/{{ hearthminion_hostname }}.conf;

  root /var/www/html;

  server_name {{ item.name }}.{{ ansible_domain }};

  location / {
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_pass http://localhost:{{ homeassistant_port }};
  }
}
